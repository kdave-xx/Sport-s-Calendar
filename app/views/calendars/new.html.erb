<% content_for :head do %>
  <%= javascript_include_tag "jqModal" %>
  <%= stylesheet_link_tag "jqModal" %>
<% end %>

<div class="column span-24">

  <div class="span-24 prepend-top">
    <% form_for @calendar, :html => {:multipart => true}, :class => "inline" do |f| %>
      <%= f.error_messages %>

      <fieldset>
        <legend>Calendar Form</legend>
       
        <div class="span-8 first">Choose Your Start Month</div>
        <div class="span-8 append-6 last">
          <%= f.select :start_month, [["January-#{@year}", "1"], ["Febuary-#{@year}", "2"], ["March-#{@year}", "3"], ["April-#{@year}","4"], ["May-#{@year}", "5"], ["June-#{@year}", "6"], ["July-#{@year}", "7"], ["August-#{@year}", "8"], ["September-#{@year}", "9"], ["October-#{@year}", "10"], ["November-#{@year}", "11"], ["December-#{@year}", "12"]], :class => "span-8" %>
        </div>

        <div class="span-24 prepend-top"><h4>Choose images for you Calendar</h4> </div>
        <div id="toggle">  </div>

        <div id="images"></div>
        <div class="jqmWindow" id="dialog">
          <a href="#" class="jqmClose prepend-14"><%= image_tag("cross.png") %></a>
          <br />
          <%= render :partial => "images", :layout => false %>
          <%= hidden_field_tag :page_id %>
        </div>

      </fieldset>
      <div class="span-24">
        <%= link_to "Preview Your Claendar >>>>>", preview_calendar_url, :class => "button", :layout => false,   :popup => ['new_window','height=620,width=430'] %>
        <div class="prepend-21">
          <%= f.submit 'Continue' %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="clear"></div>
</div>


<script type="text/javascript">
  $(function(){
    $('#calendar_start_month').change(function(){
      jQuery.ajax({
        type: "get",
        url: "<%= get_month_path %>",
        //dataType: "json",
        data: ({text_value : this.value}),
        success: function(calendar) {
        
        }
      });
    });
   });
</script>
