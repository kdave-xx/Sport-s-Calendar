  $(function(){
    $('#calendar_start_month').change(function(){
      jQuery.ajax({
        type: "get",
        url: "<%= get_month_path %>",
        //dataType: "json",
        data: ({text_value : this.value}),
        success: function(calendar) {
        
        }
      });

      <%#*$("#calendar_start_month").attr('disabled', true)%>
      
    });
  });
</script>
