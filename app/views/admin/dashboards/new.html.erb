<div class="span-24 prepend-top">
  <fieldset>
    <legend>View Images</legend>
    <div class="comment-box">
      <h4>View Images Here</h4>
        <% @global_images.each do |image| %>
        <%= image_tag image.attachment.url, :width => "100", :height => "100"  %>
      <% end %>
    </div>
    <div class="comment-box">
      <% form_for(@dashboard, :url => admin_dashboards_url, :html => {:multipart => true}) do |f| %>
        <%= f.error_messages %>
        <fieldset>
          <legend>Upload Images Here</legend>

          <%= link_to_function "Click Here", "$('.mainbox_upload').toggle()" %> <b>To upload images</b>

          <div class="mainbox_upload">
            <div class="span-12">
              <% 5.times do |i| %>
                <% fields_for :images do |image_form| %>
                  <div class="span-3">
                    <%= image_form.label :image, "Image" %>
                  </div>
                  <div class="span-8 last">
                    <%= image_form.file_field :"attachment_#{i}" %>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        </fieldset>
        <%= f.submit "Upload" %>
      <% end %>
      <div class="clear"></div>

    </div>
  </fieldset>
</div>



