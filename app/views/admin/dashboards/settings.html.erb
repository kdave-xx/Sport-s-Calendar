<hr/>
<div class="span-12 prepend-top first">
          
            <% form_for(@admin_user, :url => admin_update_password_url(@admin_user), :class => "inline") do |f| %>
            <fieldset>
              <legend>Change Password</legend>
              <%#*<div class="span-4">%>
                <%#*<label for="current_password">Current Password</label>%>
              <%#*</div>%>
              <%#*<div class="span-7 last">%>
                <%#= f.text_field :current_password, :class => "text span-6"  %>
              <%#*</div>%>
              <div class="span-4">
                <label for="new_password">New Password</label>
              </div>
              <div class="span-7 last">
                <%= f.password_field :password, :class => "text span-6"  %>
              </div>
              <div class="span-4">
                <label for="confirm_password">Confirm New Password</label>
              </div>
              <div class="span-7 last">
                <%= f.password_field :password_confirmation, :class => "text span-6"  %>
              </div>
              <div class="prepend-4">
                <%= f.submit "Update"  %>
              </div>
            </fieldset>
          <% end %>
        </div>
        <div class="span-12 prepend-top last">
            
          <% form_for(@shipping, :url => admin_update_shipping_path(@shipping)) do |f| %>
            <fieldset>
              <legend>Change Shipping & Item Price</legend>
              <div class="span-3 first">
                <label for="item_price">Item Price</label>
              </div>
              <div class="span-8 last">
                <%= f.text_field :price, :class => "text span-6" %>
              </div>
              <div class="span-3">
                <label for="shipping_price">Shipping Price</label>
              </div>
              <div class="span-8 last">
                <%= f.text_field :delivery_charge, :class => "text span-6" %>
              </div>
              <div class="prepend-3">
                <%= f.submit "Update" %>
              </div>
            </fieldset>
          <% end %>
        </div>