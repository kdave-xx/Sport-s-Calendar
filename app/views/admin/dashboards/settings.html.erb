

<div class="column span-24">
  <div class="span-24 formbg prepend-top mgb">
    <div class="span-12 prepend-top first">
      <% form_for(@admin_user, :url => admin_update_password_url(@admin_user), :class => "inline") do |f| %>
       <%= error_messages_for :admin_user, :object => [@admin_user] %>
        <fieldset>
          <legend>Change Password</legend>
  <%#*<div class="span-4">%>
  <%#*<label for="current_password">Current Password</label>%>
  <%#*</div>%>
  <%#*<div class="span-7 last">%>
  <%#= f.text_field :current_password, :class => "text span-6"  %>
  <%#*</div>%>
          <div class="span-4">
            <label for="new_password">New Password</label>
          </div>
          <div class="span-7 last">
            <%= f.password_field :password, :class => "text span-6"  %>
          </div>
          <div class="span-4">
            <label for="confirm_password">Confirm New Password</label>
          </div>
          <div class="span-7 last">
            <%= f.password_field :password_confirmation, :class => "text span-6"  %>
          </div>
          <div class="prepend-4">
            <%= f.submit "Update"  %>
          </div>
        </fieldset>
      <% end %>
    </div>
    <div class="span-12 prepend-top last">

      <% form_for(@shipping, :url => admin_update_shipping_path(@shipping)) do |f| %>
      <%= error_messages_for :shipping, :object => [@shipping] %>
        <fieldset>
          <legend>Change Shipping & Item Price</legend>
          <div class="span-3 first">
            <label for="item_price">Item Price</label>
          </div>
          <div class="span-8 last">
            <%= f.text_field :price, :class => "text span-6" %>
          </div>
          <div class="span-3">
            <label for="shipping_price">Shipping Price</label>
          </div>
          <div class="span-8 last">
            <%= f.text_field :delivery_charge, :class => "text span-6" %>
          </div>
          <div class="prepend-3">
            <%= f.submit "Update" %>
          </div>
        </fieldset>
      <% end %>
    </div>
  </div>
</div>

<script>
  $(document).ready(function(){
 $("#shipping_delivery_charge").keypress(function (e)
{
  //if the letter is not digit then display error and don't type anything
  if( e.which!=8 && e.which!=0 && (e.which<48 || e.which>57))
  {
    //display error message
   alert("Enter Only Numeric Values");
    return false;
  }
});


$("#shipping_price").keypress(function (e)
{
  //if the letter is not digit then display error and don't type anything
  if( e.which!=8 && e.which!=0 && (e.which<48 || e.which>57))
  {
    //display error message
    alert("Enter Only Numeric Values");
    return false;
  }
});
});
</script>


